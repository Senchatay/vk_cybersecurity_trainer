<div id="<%= dom_id solution %>">
  
  <% with_content ||= false %>
  <% if with_content %>
    <h1> Решение Задачи <%= @task.name %> </h1>

    <p>
      <strong>Содержание:</strong>
      <br>
      <%= text_area(:solution, :content, size: '100x15', disabled: 'disabled') %>
    </p>
  <% end %>

  <p>
    <strong>Пользователь:</strong>
    <%= solution.user_name %>
  </p>

  <p>
    <strong>Добавлено:</strong>
    <%= solution.created_at.strftime("%Y-%m-%d") %>
  </p>

</div>
