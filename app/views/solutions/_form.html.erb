<%= form_with(model: [@task, solution]) do |form| %>
  <% if solution.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(solution.errors.count, "error") %> prohibited this solution from being saved:</h2>

      <ul>
        <% solution.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form.hidden_field(:task_id, value: @task.id) %>

  <div class="mb-3">
    <%= form.label :'Содержимое', style: "display: block" %>
    <%= form.text_area :content, size: '100x15', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.submit :'Сохранить', class: 'btn btn-success' %>
  </div>
<% end %>
