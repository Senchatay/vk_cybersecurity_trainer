<% provide :page_title, 'Вход' %>

<h1 class="mb-4">Вход</h1>

<%= form_with url: sessions_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :name %>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :name, value: params[:name], class: 'form-control form-control-lg' %>
    </div>
  </div>

  <%= f.submit 'Войти', class: 'btn btn-primary btn-lg' %>
<% end %>